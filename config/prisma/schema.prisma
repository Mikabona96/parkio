// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password_hash String
  firstName String
  lastName String
  phoneNumber String
  streetAddress String
  postalCode Int
  city String
  refresh_token String?
  receipt Receipt[]
  vehicle Vehicle[]
}

model Receipt {
  id             String       @id @default(uuid())
  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId Int
  validFrom String?
  validTo String?
  length String?
  parking_descr String?
  quantityKWh String?
  amount String?
  status String?
}

enum VehicleType {
  CAR
  MOTORCYCLE
}
model Vehicle {
  id             String       @id @default(uuid())
  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId Int
  vehicleNumber String
  vehicleType VehicleType
}